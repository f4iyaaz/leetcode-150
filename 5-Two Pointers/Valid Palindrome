class Solution {
public:
    bool isPalindrome(string s) {
        string refined_str = "";
    for(int i = 0; i < s.size(); i++) {
        if((int)s[i] >= 48 && (int)s[i] <= 57 || (int)s[i] >= 65 && (int)s[i] <= 90 || (int)s[i] >= 97 && (int)s[i] <= 122) {
            refined_str += ::tolower(s[i]);
        }
    }
    cout << refined_str << endl;
    for(int i = 0, k = refined_str.size() - 1; i <= k; i++, k--) {
        if(refined_str[i] != refined_str[k]) {
            return false;
        }
    }
    return true;
    }
};
